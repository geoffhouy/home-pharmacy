<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:orientation="vertical"
    android:id="@+id/ScheduleRecyclerViewItemLayout">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/ScheduleIcon"
        android:src="@drawable/ic_schedule"/>

    <TextView
        android:id="@+id/ScheduleText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/ScheduleIcon"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:text="S Text 1"
        android:textSize="18sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/ScheduleText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/ScheduleText1"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:text="S Text 2"
        android:textSize="18sp"
        android:textColor="@android:color/black"/>


    <TextView
        android:id="@+id/ScheduleText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/ScheduleText2"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:text="S Text 3"
        android:textSize="18sp"
        android:textColor="@android:color/black"/>

</LinearLayout>