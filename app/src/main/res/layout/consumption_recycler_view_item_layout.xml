<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:id="@+id/ConsumptionRecyclerViewItemLayout">

    <TextView
        android:id="@+id/ConsumptionText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:text="User Name"
        android:textSize="18sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/ConsumptionText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/ConsumptionText1"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:text="User Name"
        android:textSize="18sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/ConsumptionText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/ConsumptionText2"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:text="Pill Name"
        android:textSize="18sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/ConsumptionText4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/ConsumptionText3"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:text="Consumed?"
        android:textSize="18sp"
        android:textColor="@android:color/black"/>

</RelativeLayout>